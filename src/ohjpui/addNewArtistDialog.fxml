<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>


<GridPane  xmlns:fx="http://javafx.com/fxml" fx:controller="ohjpui.AddNewArtistDialogController" 
            style="-fx-background-color: lightgrey;" hgap="10" vgap="10"   >
    
    <padding><Insets top="10" right="10" bottom="10" left="10" /></padding>
    <columnConstraints><ColumnConstraints halignment="RIGHT"  percentWidth="20" /> </columnConstraints>

    <Label text="%artistNameLabel" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <Label text="%artistDisplayNameLabel" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Label text="%artistAliasesLabel" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Region GridPane.hgrow="ALWAYS" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Label text="%artistOriginLabel" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <Label text="%artistFoundedLabel" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <Label text="%commentLabel" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    

    <TextField fx:id="nameTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <TextField fx:id="displayNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <TextField fx:id="aliasesTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Text text="%artistAliasesGuide" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <ComboBox fx:id="originComboBox" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <TextField fx:id="foundedTextField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <TextArea fx:id="artistCommentTextArea" GridPane.columnIndex="1" GridPane.rowIndex="6" prefHeight="80" wrapText="true" /> 
     

</GridPane>
